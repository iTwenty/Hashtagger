    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgv_album_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_album_count"
        android:background="#aaffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Album_Count"/>

</merge>