<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imgv_scroll_to_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_upload_light"
        android:background="@drawable/selector_barbutton"/>

    <TextView
        android:id="@+id/tv_new_results_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/imgv_dismiss_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_remove_light"
        android:background="@drawable/selector_barbutton"/>

</merge>