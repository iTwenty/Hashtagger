<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        tools:src="@drawable/facebook_logo"
        android:id="@+id/imgv_profile_image"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/content_padding"/>

    <TextView
        android:id="@+id/tv_user_name_or_story"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imgv_profile_image"
        android:layout_alignTop="@id/imgv_profile_image"
        android:layout_toLeftOf="@+id/tv_created_time"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="@dimen/content_padding"
        tools:text="user name\nstory\nstory\nstory\n"/>

    <TextView
        android:id="@id/tv_created_time"
        android:singleLine="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="dd/mm/yyyy"
        style="@style/DateText"
        android:padding="@dimen/content_padding"/>

    <RelativeLayout
        android:id="@+id/rl_message_picture_wrapper"
        android:layout_below="@id/imgv_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_message"
            android:ellipsize="end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:layout_toLeftOf="@+id/fl_picture_play_wrapper"
            tools:text="line1\nline2\nline3\nline4\nline5\nline6"
            android:padding="@dimen/content_padding"/>

        <include
            layout="@layout/facebook_media"
            android:layout_alignParentRight="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@id/fl_picture_play_wrapper"/>

    </RelativeLayout>

    <net.thetranquilpsychonaut.hashtagger.sites.facebook.ui.FacebookButtons
        android:id="@+id/facebook_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/rl_message_picture_wrapper"/>

</merge>