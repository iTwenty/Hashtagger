<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgv_profile_image"
        android:background="@drawable/drawable_image_loading"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/content_padding"/>

    <TextView
        android:id="@+id/tv_user_name_or_story"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imgv_profile_image"
        android:layout_alignTop="@id/imgv_profile_image"
        android:layout_above="@+id/tv_message"
        android:layout_toLeftOf="@+id/tv_created_time"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="@dimen/content_padding"
        tools:text="user name\nstory\nstory\nstory\n"/>

    <TextView
        android:id="@id/tv_created_time"
        android:singleLine="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="dd/mm/yyyy"
        style="@style/DateText"
        android:padding="@dimen/content_padding"/>

    <TextView
        android:id="@id/tv_message"
        android:ellipsize="end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:layout_below="@id/imgv_profile_image"
        tools:text="line1\nline2\nline3\nline4\nline5\nline6"
        android:padding="@dimen/content_padding"/>

    <RelativeLayout
        android:id="@+id/rl_link_wrapper"
        android:layout_below="@id/tv_message"
        android:background="@drawable/selector_shadow_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/fl_picture_play_wrapper"
            android:layout_width="100dp"
            android:layout_height="70dp"
            layout="@layout/facebook_media"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fl_picture_play_wrapper"
            android:layout_alignTop="@id/fl_picture_play_wrapper"
            tools:text="title"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fl_picture_play_wrapper"
            android:textSize="10dp"
            tools:text="description\ndescription\ndescription\ndescription"
            android:layout_below="@id/tv_name"
            android:layout_above="@+id/tv_caption"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@id/tv_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fl_picture_play_wrapper"
            android:layout_alignBottom="@id/fl_picture_play_wrapper"
            tools:text="website"
            android:singleLine="true"/>

    </RelativeLayout>

    <net.thetranquilpsychonaut.hashtagger.sites.facebook.ui.FacebookButtons
        android:id="@+id/facebook_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/rl_link_wrapper"/>

</merge>