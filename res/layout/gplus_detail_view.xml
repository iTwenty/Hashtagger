<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.thetranquilpsychonaut.hashtagger.widgets.VideoThumbnail
        android:id="@+id/imgv_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/imgv_thumbnail"
        android:layout_alignTop="@id/imgv_thumbnail"
        android:layout_height="wrap_content"
        style="@style/Details_Title"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/imgv_thumbnail"
        style="@style/Details_Description"/>

</merge>