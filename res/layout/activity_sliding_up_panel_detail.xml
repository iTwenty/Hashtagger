<?xml version="1.0" encoding="utf-8"?>

<net.thetranquilpsychonaut.hashtagger.widgets.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/net.thetranquilpsychonaut.hashtagger"
    android:id="@+id/slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:panelHeight="48dp">

    <!-- Subclasses add their main view here -->

    <ViewAnimator
        android:id="@+id/va_buttons_actions_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card"
        android:padding="0dp">

        <!-- Subclasses add SitesButtons here -->

        <FrameLayout
            android:id="@+id/sites_actions_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ViewAnimator>

</net.thetranquilpsychonaut.hashtagger.widgets.SlidingUpPanelLayout>