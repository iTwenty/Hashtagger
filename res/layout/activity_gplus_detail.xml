<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="@dimen/layout_padding">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card">

        <net.thetranquilpsychonaut.hashtagger.sites.gplus.ui.GPlusHeader
            android:id="@+id/gplus_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gplus_header"
            style="@style/MainMessage_Detail"/>

        <net.thetranquilpsychonaut.hashtagger.sites.gplus.ui.GPlusVideoView
            android:id="@+id/gplus_media_view"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/fl_placeholder"
            android:layout_below="@id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </RelativeLayout>

</ScrollView>