<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/imgv_profile_image"
        tools:src="@drawable/twitter_logo_blue"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/content_padding" />

    <TextView
        android:id="@+id/tv_user_name_or_story"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imgv_profile_image"
        android:layout_alignTop="@id/imgv_profile_image"
        android:layout_above="@+id/tv_message"
        android:layout_toLeftOf="@id/tv_created_time"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="@dimen/content_padding"
        tools:text="user name\nstory\nstory\nstory\n" />

    <TextView
        android:id="@id/tv_created_time"
        android:singleLine="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="dd/mm/yyyy"
        android:padding="@dimen/content_padding" />

    <TextView
        android:id="@id/tv_message"
        android:layout_columnSpan="4"
        android:ellipsize="end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_below="@id/imgv_profile_image"
        tools:text="line1\nline2\nline3\nline4\nline5\nline6"
        android:padding="@dimen/content_padding" />

    <ViewAnimator
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/va_attachment_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgv_picture"
                android:layout_width="100dp"
                android:layout_height="70dp"
                tools:src="@drawable/twitter_logo_blue"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgv_picture"
                android:layout_alignTop="@id/imgv_picture"
                tools:text="title"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgv_picture"
                android:textSize="10dp"
                tools:text="description\ndescription\ndescription\ndescription"
                android:layout_below="@id/tv_name"
                android:layout_above="@+id/tv_caption"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@id/tv_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgv_picture"
                android:layout_alignBottom="@id/imgv_picture"
                tools:text="website"
                android:singleLine="true" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgv_picture_center"
            android:layout_width="100dp"
            android:layout_height="70dp"
            tools:src="@drawable/twitter_logo_blue"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true" />

    </ViewAnimator>

    <TextView
        android:id="@+id/tv_expand"
        android:text="@string/str_expand"
        android:layout_below="@id/va_attachment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:padding="@dimen/layout_padding" />

</RelativeLayout>
