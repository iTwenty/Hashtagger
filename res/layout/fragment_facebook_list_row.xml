<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/imgv_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/twitter_logo_blue"
        android:padding="@dimen/content_padding" />

    <TextView
        android:id="@+id/tv_user_name_or_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgv_profile_image"
        android:layout_toLeftOf="@+id/tv_created_time"
        android:textStyle="bold"
        android:ellipsize="end"
        android:padding="@dimen/content_padding"
        android:maxLines="2"
        tools:text="user name\nstory" />

    <TextView
        android:id="@id/tv_created_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        tools:text="dd/mm/yyyy" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_profile_image"
        android:padding="@dimen/content_padding"
        android:maxLines="5"
        android:ellipsize="end"
        tools:text="line1\nline2\nline3\nline4\nline5\nline6" />

    <net.thetranquilpsychonaut.hashtagger.sites.facebook.ui.FacebookAttachmentView
        android:id="@+id/fav_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:background="@drawable/bg_shadow"
        android:padding="@dimen/shadow_padding"/>

</RelativeLayout>
