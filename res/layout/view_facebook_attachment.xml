<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:id="@+id/va_attachment_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgv_picture_center"
        android:layout_width="100dp"
        android:layout_height="70dp"
        tools:src="@drawable/twitter_logo_blue"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imgv_picture"
        android:layout_width="100dp"
        android:layout_height="70dp"
        tools:src="@drawable/twitter_logo_blue"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgv_picture"
        android:layout_alignTop="@id/imgv_picture"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgv_picture"
        android:textSize="10sp"
        android:layout_above="@+id/tv_caption"
        android:layout_below="@id/tv_name" />

    <TextView
        android:id="@id/tv_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgv_picture"
        android:layout_alignBottom="@id/imgv_picture"
        android:singleLine="true" />

</RelativeLayout>
