<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="sitesListRowStyle">@style/SitesListRowStyle</item>
    </style>

    <style name="DateText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_faded</item>
    </style>

    <style name="HandleText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SitesListRowStyle" parent="android:Theme.Holo.Light">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>
</resources>