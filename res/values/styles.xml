<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="sitesListRowStyle">@style/sitesListRowStyle</item>
        <item name="sitesFooterStyle">@style/sitesFooterStyle</item>
        <item name="newResultsBarStyle">@style/newResultsBarStyle</item>
        <item name="GPlusDetailViewStyle">@style/GPlusDetailViewStyle</item>
    </style>

    <style name="TextView_Default">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView_Small" parent="TextView_Default">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/text_faded</item>
    </style>

    <style name="ErrorText" parent="TextView_Default">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <style name="LoginButton_Text" parent="TextView_Default">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainMessage" parent="TextView_Default">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">10</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainMessage_Detail" parent="TextView_Default">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DateText" parent="TextView_Small">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TwitterScreenName" parent="TextView_Small">
        <item name="android:maxLines">1</item>
    </style>

    <style name="sitesListRowStyle" parent="AppTheme">
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="sitesFooterStyle" parent="AppTheme">
        <item name="android:background">@drawable/selector_card</item>
    </style>

    <style name="newResultsBarStyle" parent="AppTheme">
        <item name="android:background">#cc000000</item>
    </style>


    <style name="GPlusDetailViewStyle">
        <item name="android:background">@drawable/selector_picture_frame</item>
    </style>

    <style name="sitesButtonStyle" parent="android:Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_faded</item>
        <item name="android:background">@drawable/selector_sites_buttons</item>
    </style>

    <style name="AlbumImage">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FrameImage">
        <item name="android:background">@drawable/selector_picture_frame</item>
    </style>

    <style name="ListMediaImage" parent="FrameImage">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ProfileImage" parent="FrameImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="FullImage" parent="FrameImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ProfileName" parent="TextView_Default">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Link" parent="TextView_Default">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@drawable/selector_link_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SavedHashtagText" parent="TextView_Default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Details_Title" parent="TextView_Default">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Details_Description" parent="TextView_Small">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Album_Count" parent="TextView_Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- Styles for ButtonToast -->

    <style name="DefaultText">
        <item name="android:text">Default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DefaultRootLayout">
        <item name="android:background">#cc000000</item>
    </style>

    <style name="ButtonToast_RootLayout" parent="DefaultRootLayout">
        <item name="android:layout_marginBottom">@dimen/content_padding</item>
        <item name="android:layout_marginLeft">@dimen/content_padding</item>
        <item name="android:layout_marginRight">@dimen/content_padding</item>
    </style>

    <style name="ButtonToast_TextView" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="ButtonToast_Divider">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonToast_Button">
        <item name="android:background">@drawable/selector_barbutton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <dimen name="default_text_padding">5dp</dimen>
</resources>