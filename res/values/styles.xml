<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="sitesListRowStyle">@style/sitesListRowStyle</item>
        <item name="sitesFooterStyle">@style/sitesFooterStyle</item>
        <item name="newResultsBarStyle">@style/newResultsBarStyle</item>
    </style>

    <style name="TextView_Default">
        <item name="android:padding">@dimen/default_text_padding</item>
    </style>

    <style name="ErrorText">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="MainMessage">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="DateText" parent="TextView_Default">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_faded</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TwitterScreenName" parent="DateText">

    </style>

    <style name="sitesListRowStyle" parent="AppTheme">
        <item name="android:background">@drawable/card</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="sitesFooterStyle" parent="AppTheme">
        <item name="android:background">@drawable/selector_card</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="newResultsBarStyle" parent="AppTheme">
        <item name="android:background">#cc000000</item>
    </style>

    <style name="sitesButtonStyle" parent="android:Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_faded</item>
        <item name="android:background">@drawable/selector_sites_buttons</item>
    </style>

    <style name="ProfileImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_shadow_border</item>
    </style>

    <style name="MediaImage">
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ProfileName" parent="TextView_Default">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Link">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@drawable/selector_link_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/link_padding</item>
    </style>

    <!-- Styles for ButtonToast -->

    <style name="DefaultText">
        <item name="android:text">Default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DefaultRootLayout">
        <item name="android:background">#cc000000</item>
    </style>

    <style name="ButtonToast_RootLayout" parent="DefaultRootLayout">
        <item name="android:layout_marginBottom">@dimen/content_padding</item>
        <item name="android:layout_marginLeft">@dimen/content_padding</item>
        <item name="android:layout_marginRight">@dimen/content_padding</item>
    </style>

    <style name="ButtonToast_TextView" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="ButtonToast_Divider">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonToast_Button">
        <item name="android:background">@drawable/selector_barbutton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <dimen name="default_text_padding">5dp</dimen>
</resources>